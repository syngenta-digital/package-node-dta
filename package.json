{
    "name": "@syngenta-digital/dta",
    "author": "Paul Cruse, Enginerring Lead, Syngenta Digital",
    "main": "src/index.js",
    "version": "1.0.10",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/syngenta-digital/package-node-dta.git"
    },
    "bugs": {
        "url": "https://github.com/syngenta-digital/package-node-dta/issues"
    },
    "scripts": {
        "test": "unittest=true nyc mocha --recursive --timeout 10000",
        "local": "docker-compose -f test/local/databases.yml up --remove-orphans",
        "report": "unittest=true nyc report --reporter=lcov",
        "lint": "eslint src/**"
    },
    "dependencies": {
        "aws-sdk": "^2.1048.0",
        "deepmerge": "^4.2.1",
        "js-yaml": "^4.1.0",
        "json-schema-ref-parser": "^9.0.9",
        "neo4j-driver": "^4.4.5"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "mocha": "^8.1.1",
        "mocha-junit-reporter": "^2.0.0",
        "mocha-multi-reporters": "^1.1.7",
        "mochawesome": "^6.1.1",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5"
    },
    "engines": {
        "node": ">=12.14.1"
    },
    "nyc": {
        "temp-directory": "./node_modules/.nyc_output"
    },
    "eslintConfig": {
        "env": {
            "es6": true
        },
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "plugins": [
            "prettier"
        ],
        "extends": [
            "plugin:prettier/recommended"
        ],
        "rules": {
            "prettier/prettier": [
                "warn",
                {
                    "trailingComma": "none",
                    "printWidth": 120,
                    "tabWidth": 4,
                    "singleQuote": true,
                    "bracketSpacing": false,
                    "arrowParens": "always"
                }
            ],
            "eqeqeq": "error",
            "prefer-destucturing": 0,
            "no-global-assign": 0,
            "rest-spread-spacing": 1,
            "no-restricted-syntax": 0,
            "consistent-return": 0,
            "import/no-dynamic-require": 0,
            "no-param-reassign": 0,
            "global-require": 0,
            "class-methods-use-this": 0,
            "no-underscore-dangle": 0,
            "camelcase": 0
        }
    }
}
